@model MiniCore_Comision.Models.Venta
@{
    ViewData["Title"] = "Registrar Venta";
}

<h2 class="text-center">Registrar Venta</h2>

<form asp-action="Create" method="post" class="mt-4 mx-auto" style="max-width:500px;">
    <div class="form-group mb-3">
        <label asp-for="VendedorId" class="form-label">Vendedor</label>
        <select asp-for="VendedorId" class="form-select" asp-items="ViewBag.Vendedores">
            <option value="">-- Seleccione un vendedor --</option>
        </select>
        <span asp-validation-for="VendedorId" class="text-danger"></span>
    </div>

    <div class="form-group mb-3">
        <label asp-for="Monto" class="form-label">Monto de la venta</label>
        <input asp-for="Monto" class="form-control" />
        <span asp-validation-for="Monto" class="text-danger"></span>
    </div>

    <button type="submit" class="btn btn-primary w-100">Guardar Venta</button>
</form>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}